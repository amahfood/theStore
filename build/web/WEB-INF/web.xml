<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>storeServlet</servlet-name>
        <servlet-class>Servlet.storeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>productSearchServlet</servlet-name>
        <servlet-class>Servlet.productSearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>Servlet.loginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Welcome</servlet-name>
        <servlet-class>Servlet.Welcome</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>profileInfo</servlet-name>
        <servlet-class>Servlet.profileInfo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>manageInfo</servlet-name>
        <servlet-class>Servlet.manageInfo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>returnStore</servlet-name>
        <servlet-class>Servlet.returnStore</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cartServlet</servlet-name>
        <servlet-class>Servlet.cartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>storeServlet</servlet-name>
        <url-pattern>/storeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>productSearchServlet</servlet-name>
        <url-pattern>/productSearchServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Welcome</servlet-name>
        <url-pattern>/Welcome</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>profileInfo</servlet-name>
        <url-pattern>/profileInfo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>manageInfo</servlet-name>
        <url-pattern>/manageInfo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>returnStore</servlet-name>
        <url-pattern>/returnStore</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cartServlet</servlet-name>
        <url-pattern>/cartServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <res-ref-name>jdbc/mudkip</res-ref-name>
        <res-type>javax.sql.ConnectionPoolDataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
